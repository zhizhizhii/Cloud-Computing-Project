<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--配置数据源，交给Spring-->

    <typeAliases>
        <package name="com.zhi.pojo"/>
    </typeAliases>

    <mappers>
        <mapper class="com.zhi.dao.ProductMapper"/>
        <mapper class="com.zhi.dao.PurchaseMapper"/>
        <mapper class="com.zhi.dao.ProfitMapper"/>
        <mapper class="com.zhi.dao.SaleMapper"/>
        <mapper class="com.zhi.dao.UserMapper"/>
        <mapper class="com.zhi.dao.OrderMapper"/>
    </mappers>


</configuration>